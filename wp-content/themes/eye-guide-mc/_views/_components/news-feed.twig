<div class="py-16 bg-primary">
    <div class="container">
        <div class="flex flex-wrap">

            <div class="w-full text-white md:px-8">
                <h3 class="inline-block relative after:absolute after:bg-tertiary after:w-full after:h-[2px] after:bottom-0 after:left-0 mb-8">News</h3>
            </div>

            <div class="relative flex justify-center w-full px-4 lg:px-6">

                <ul class="flex w-full overflow-x-auto overflow-y-hidden scrolling-touch md:-mx-5 2xl:-mx-8 carousel-container">

                    {% for item in posts %}
                    
                    <li class="flex-none w-full px-5 sm:w-1/2 lg:w-1/3 carousel-item">
                        
                        <a href="#" class="p-5 text-white">
                            <div class="mb-4">
                                <img class="object-cover object-center w-full h-full" src="{{item.thumbnail.src}}" alt="{{item.title}}">
                            </div>
                            
                            <h4 class="inline-block relative font-sans after:absolute after:bg-tertiary after:w-1/6 after:h-[2px] after:bottom-[-4px] after:left-0 mb-4">{{item.title}}</h4>
                            {{item.post_excerpt}}
                        </a>
                    </li>

                    {% endfor %}

                </ul>
                <div class="absolute top-0 left-0 flex items-center h-full">
                    <button class="px-0 py-2 opacity-25 carousel-arrow carousel-arrow-left">
                        {{function('icon', 'angle-left', 'text-white')}}
                    </button>
                </div>

                <div class="absolute top-0 right-0 flex items-center h-full">
                    <button class="px-0 py-2 carousel-arrow carousel-arrow-right">
                        {{function('icon', 'angle-right', 'text-white')}}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>