<div class="relative bg-primary lg:mt-[-5px] xl:mt-[-15px] text-white flex flex-wrap text-center hero overflow-hidden">

  <div class="absolute w-full h-full lg:h-auto z-1 opacity-20 lg:opacity-100 lg:relative lg:block lg:w-1/2 2xl:w-1/3 bg-primary-light">
    <img width="725" height="525" class="object-cover object-top w-full h-full lg:object-center" src="{{imageLeft.sizes.medium_large|towebp}}" alt="{{site.title}}">
  </div>

  <div
    class="relative z-10 w-full lg:w-1/2 p-4 py-16 2xl:w-1/3 2xl:px-12 3xl:p-24 order-[-1] 2xl:order-1 flex flex-col justify-center">

    <p class="h1">{{heading}}</p>

    {% if subheading %}
      <p class="my-8 font-semibold">{{subheading}}</p>
    {% endif %}

    {% if heroButton %}
      <a href="{{heroButtonDestination.url}}" class="mx-auto btn btn--secondary">{{heroButtonText}}</a>
    {% endif %}

    {% if showNewsletter %}
      <a href="#" class="mx-auto btn btn--secondary modal-trigger">Join our mailing list</a>
    {% endif %}

  </div>

  <div class="hidden w-1/3 2xl:order-2 2xl:block bg-primary-light">
    <img width="725" height="525" class="object-cover object-center w-full h-full" src="{{imageRight.sizes.medium_large|towebp}}" alt="{{site.title}}">
  </div>

</div>