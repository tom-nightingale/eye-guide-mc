<div class="py-16 bg-gray-100">
    <div class="container">
        <div class="flex flex-wrap">
            
            <div class="w-full text-center md:text-left md:w-1/4 lg:w-1/5 md:px-8">
                <h3>Reviews</h3>
                <a class="btn btn--tertiary" href="{{site.url}}/testimonials">See all reviews</a>
            </div>

            <div class="relative flex justify-center w-full px-4 ml-auto md:w-3/4 lg:w-4/5 lg:px-6">

                <ul class="flex w-full overflow-x-auto scrolling-touch md:-mx-5 2xl:-mx-8 carousel-container">
                    
                    {% for item in reviews %}
                        <li class="flex-none w-full px-5 sm:w-1/2 lg:w-1/2 carousel-item">
                            <div class="p-5 text-primary ">
                                <div class="mb-3">
                                    <div class="font-serif text-primary">
                                        {{item.meta('testimonial')}}
                                    </div>
                                </div>

                                <p class="mt-3 font-sans text-sm font-semibold leading-snug text-primary">
                                    <span>{{item.name}}</span>
                                </p>
                            </div>
                        </li>
                    {% endfor %}
                    
                </ul>
                <div class="absolute top-0 left-0 flex items-center h-full">
                    <button aria-label="Next review button" class="px-0 py-2 opacity-25 carousel-arrow carousel-arrow-left">
                        {{function('icon', 'angle-left', 'text-primary')}}
                    </button>
                </div>
                
                <div class="absolute top-0 right-0 flex items-center h-full">
                    <button aria-label="Previous review button" class="px-0 py-2 carousel-arrow carousel-arrow-right">
                        {{function('icon', 'angle-right', 'text-primary')}}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>